{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "module": "commonjs",
    "rootDir": ".",
    "strict": true,
    "target": "ES2020",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules"],
    },
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
  },
  "references": [
    { "path": "packages/articles" },
    { "path": "packages/components" },
    { "path": "packages/leetcode" },
    { "path": "packages/tod-blog" },
    { "path": "packages/tod-blog-e2e" },
  ]
}
